<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="assignment1.android.hua.gr.assignment1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SecondActivity" android:label="@string/title_activity_second" >>
            <intent-filter>
                <!-- my custom action to call the second activity (this) -->
                <action android:name="gr.hua.android.assignment1.RSSpresentation"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
    </application>

</manifest>
